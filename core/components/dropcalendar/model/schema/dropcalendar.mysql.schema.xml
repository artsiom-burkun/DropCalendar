<?xml version="1.0" encoding="UTF-8"?>
<model package="dropcalendar" baseClass="xPDOObject" platform="mysql" defaultEngine="InnoDB" phpdoc-package="dropcalendar"
       version="1.1">
    <object class="DropCalendarItem" table="dropcalendar_items" extends="xPDOSimpleObject">

        <field key="title" dbtype="varchar" precision="100" phptype="string" null="false" default=""/>

        <field key="calendar" dbtype="text" phptype="string" null="true" default=""/>

        <field key="allDay" dbtype="int" precision="10" phptype="integer" attributes="unsigned" null="true" default="0" />
        <field key="start" dbtype="datetime"   phptype="datetime"  />
        <field key="end" dbtype="datetime"   phptype="datetime"  />

        <field key="info" dbtype="text" phptype="string" null="true" default=""/>

        <field key="backgroundColor" dbtype="text" phptype="string" null="true" default=""/>
        <field key="borderColor" dbtype="text" phptype="string" null="true" default=""/>
        <field key="textColor" dbtype="text" phptype="string" null="true" default=""/>

    </object>

</model>